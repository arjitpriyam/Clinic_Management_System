@model Clinic_Management_System.Models.MessageViewModel
@{
    ViewBag.Title = "View_Messages";
}

@{
    Html.RenderPartial("Patient_Sidebar");
}

<h1 align="center" style="font-weight:bolder">Messages</h1>
<hr />
<div class="main">
    <table class="table table-bordered table-hover">
        <tr>
            <th>From</th>
            <th>To</th>
            <th>Subject</th>
            <th>Message</th>
            <th>Date</th>
        </tr>

        @if (Model.lstMessage == null)
        {
            <tr>
                <td colspan="8">No Data Found</td>
            </tr>
        }
        else
        {
            foreach (var item in Model.lstMessage)
            {
                <tr>
                    <td>@item.From_Email</td>
                    <td>@item.To_Email</td>
                    <td>@item.Subject</td>
                    <td>@item.MessageDetail</td>
                    <td>@item.Date</td>
                </tr>
            }
        }
    </table>
</div>

