@model Clinic_Management_System.Models.DoctorAppointmentViewModel
@{
    ViewBag.Title = "View_App_Details";
}

@{
    Html.RenderPartial("Patient_Sidebar");
}

<h1 align="center" style="font-weight:bolder">Appointment Details</h1>
<hr />
<div class="main">
    <table class="table table-bordered table-hover">
        <tr>
            <th>Doctor Name</th>
            <th>Subject</th>
            <th>Description</th>
            <th>Appointment Date</th>
            <th>Appointment Status</th>
        </tr>

        @if (Model.lstApp == null)
        {
            <tr>
                <td colspan="5">No Data Found</td>
            </tr>
        }
        else
        {
            foreach (var item in Model.lstApp)
            {
                <tr>
                    <td>@item.DoctorName</td>
                    <td>@item.Subject</td>
                    <td>@item.Description</td>
                    <td>@item.AppointmentDate.ToString("dd-MMM-yyyy")</td>
                    <td>@item.AppointmentStatus</td>
                </tr>
            }
        }
    </table>
</div>

