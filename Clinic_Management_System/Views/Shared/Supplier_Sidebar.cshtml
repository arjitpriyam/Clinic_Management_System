<link href="@Url.Content("~/Content/Sidebar.css")"
      rel="stylesheet" type="text/css" />

@using (Clinic_Management_System.Models.KIITEntities db = new Clinic_Management_System.Models.KIITEntities())
{
    int memid = Convert.ToInt32(Session["Memberid"]);
    var data = db.Suppliers.SingleOrDefault(a => a.MemberId == memid);
    if (data == null)
    {
        <div class="sidenav">
            <a href="@Url.Action("DashBoard", "Supplier")">Dashboard</a>
            <a href="@Url.Action("EditProfile", "Supplier")">Edit Profile</a>
        </div>
    }
    else
    {
        <div class="sidenav">
            <a href="@Url.Action("DashBoard", "Supplier")">Dashboard</a>
            <a href="@Url.Action("EditProfile", "Supplier")">Edit Profile</a>
            <a href="@Url.Action("Change_Password", "Supplier")">Change Password</a>
            <a href="@Url.Action("View_Order_Details", "Supplier")">View Order Details</a>
        </div>
    }
}
