<link href="@Url.Content("~/Content/Sidebar.css")"
      rel="stylesheet" type="text/css" />

@using (Clinic_Management_System.Models.KIITEntities db = new Clinic_Management_System.Models.KIITEntities())
{
    int memid = Convert.ToInt32(Session["Memberid"]);
    var data = db.Doctors.SingleOrDefault(a => a.MemberId == memid);
    if (data == null)
    {
    <div class="sidenav">
        <a href="@Url.Action("DashBoard", "Doctor")">Dashboard</a>
        <a href="@Url.Action("EditProfile", "Doctor")">Edit Profile</a>
    </div>
    }
    else
    {
    <div class="sidenav">
        <a href="@Url.Action("DashBoard", "Doctor")">Dashboard</a>
        <a href="@Url.Action("EditProfile", "Doctor")">Edit Profile</a>
        <a href="@Url.Action("Change_Password", "Doctor")">Change Password</a>
        <a href="@Url.Action("View_Message", "Doctor")">View/Reply Messages</a>
        <a href="@Url.Action("AppointmentDetails", "Doctor")">Appointment Details</a>
    </div>
    }
}

